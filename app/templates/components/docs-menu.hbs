{{#bulma-menu }}
  {{#bulma-menu-list label="Outline"}}
    <li>
      {{#link-to "docs.index" class="item" activeClass="is-active"}}General{{/link-to}}
    </li>
    <li>
      {{#link-to "docs.plugins.getting-started" activeClass="is-active" class="item"}}Getting started{{/link-to}}
    </li>
    {{!--
    <li>
      {{#link-to "docs.plugins.implement-your-own" class="item" activeClass="is-active"}}Extending{{/link-to}}
    </li>
    <li>
      {{#link-to "docs.plugins.reuse-of-data" class="item" activeClass="is-active"}}Reusing data{{/link-to}}
    </li>  --}}
  {{/bulma-menu-list}}
  {{#bulma-menu-list label="Deployment"}}
    <li>
      {{#link-to "docs.deploy-as-addon" activeClass="is-active"}}As an Ember.js addon{{/link-to}}
    </li>
    <li>
      {{#link-to "docs.deploy-as-library" activeClass="is-active"}}As a JavaScript library{{/link-to}}
    </li>
    <li>
      {{#link-to "docs.iframe-support" activeClass="is-active"}}Using an iframe{{/link-to}}
    </li>
  {{/bulma-menu-list}}
  {{#bulma-menu-list label="Core"}}
    <li>
      {{#link-to "docs.core-development" class="item" activeClass="is-active"}}Overview{{/link-to}}
    </li>

    {{#each this.core as |component|}}
      <li>
        {{link-to component.label "docs.core.from-repository" component.namespace component.repository activeClass="is-active"}}
      </li>
    {{/each}}
    <li><a href="/code/" target="_blank" rel="noopener"> API documentation </a> </li>
  {{/bulma-menu-list}}
  {{#bulma-menu-list label="Plugins"}}
    {{#each this.plugins as |plugin|}}
      <li>
        {{link-to plugin.label "docs.plugins.from-repository" plugin.namespace plugin.repository activeClass="is-active" }}
      </li>
    {{/each}}
  {{/bulma-menu-list}}
  {{#bulma-menu-list label="LBLOD Specific plugins"}}
    {{#each this.lblodPlugins as |plugin|}}
      <li>
        {{link-to plugin.label "docs.plugins.from-repository" plugin.namespace plugin.repository activeClass="is-active"}}
      </li>
    {{/each}}
  {{/bulma-menu-list}}

  {{#bulma-menu-list label="Example implementations"}}
    {{#each this.existingImplementations as |impl|}}
      <li>
        {{link-to impl.label "docs.implementations.from-repository" impl.namespace impl.repository activeClass="is-active"}}
      </li>
    {{/each}}
  {{/bulma-menu-list}}

{{/bulma-menu}}
